<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Result_Activity">

    <ImageButton
        android:id="@+id/BT_next"
        android:layout_width="410px"
        android:layout_height="140px"
        android:layout_gravity="left"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        android:layout_marginTop="10px"
        android:layout_marginLeft="10px"
        android:src="@drawable/back_img"/>

    <LinearLayout
        android:layout_width="1080px"
        android:layout_height="1300px"
        android:background="@drawable/check_img"
        android:orientation="vertical"
        android:layout_marginTop="50px"
        android:gravity="center_horizontal"
        android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="left"
        android:layout_marginTop="190px"
        android:layout_marginBottom="10px"
        >
        <TextView
            android:layout_width="500px"
            android:layout_height="wrap_content"
            android:text="학년: "
            android:textSize="80px"
            android:gravity="right"
            android:textColor="#3C3C3C"
            android:fontFamily="@font/pretendard_bold"
            />
        <TextView
            android:id="@+id/TV_grade"
            android:layout_width="400px"
            android:layout_height="wrap_content"
            android:text="111111111111111111"
            android:textSize="80px"
            android:gravity="left"
            android:textColor="@color/black"
            android:fontFamily="@font/pretendard_bold"
            android:layout_marginLeft="4px"
            android:singleLine="true"
            />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left"
            android:layout_marginBottom="10px"
            >
            <TextView
                android:layout_width="500px"
                android:layout_height="wrap_content"
                android:text="반: "
                android:textSize="80px"
                android:gravity="right"
                android:textColor="#3C3C3C"
                android:fontFamily="@font/pretendard_bold"
                />
            <TextView
                android:id="@+id/TV_class"
                android:layout_width="400px"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="80px"
                android:gravity="left"
                android:textColor="@color/black"
                android:fontFamily="@font/pretendard_bold"
                android:singleLine="true"
                android:layout_marginLeft="4px"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left"
            android:layout_marginBottom="10px"
            >
            <TextView
                android:layout_width="500px"
                android:layout_height="wrap_content"
                android:text="번호: "
                android:textSize="80px"
                android:gravity="right"
                android:textColor="#3C3C3C"
                android:fontFamily="@font/pretendard_bold"
                />
            <TextView
                android:id="@+id/TV_number"
                android:layout_width="400px"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="80px"
                android:gravity="left"
                android:textColor="@color/black"
                android:fontFamily="@font/pretendard_bold"
                android:layout_marginLeft="4px"
                android:singleLine="true"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left"
            android:layout_marginBottom="10px"
            >
            <TextView
                android:layout_width="500px"
                android:layout_height="wrap_content"
                android:text="이름: "
                android:textSize="80px"
                android:gravity="right"
                android:textColor="#3C3C3C"
                android:fontFamily="@font/pretendard_bold"
                />
            <TextView
                android:id="@+id/TV_name"
                android:layout_width="400px"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="80px"
                android:gravity="left"
                android:textColor="@color/black"
                android:fontFamily="@font/pretendard_bold"
                android:layout_marginLeft="4px"
                android:singleLine="true"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left"
            android:layout_marginBottom="10px"
            >
            <TextView
                android:layout_width="500px"
                android:layout_height="wrap_content"
                android:text="좌석 번호: "
                android:textSize="80px"
                android:gravity="right"
                android:textColor="#3C3C3C"
                android:fontFamily="@font/pretendard_bold"
                />
            <TextView
                android:id="@+id/TV_seat_number"
                android:layout_width="400px"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="80px"
                android:gravity="left"
                android:textColor="@color/black"
                android:fontFamily="@font/pretendard_bold"
                android:layout_marginLeft="4px"
                android:singleLine="true"
                />
        </LinearLayout>
        //시간은 파이어베이스에서 확인 가능하다면 굳이 코딩할 필요 없음
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left">
            <TextView
                android:layout_width="500px"
                android:layout_height="wrap_content"
                android:text="시간: "
                android:textSize="80px"
                android:gravity="right"
                android:textColor="#3C3C3C"
                android:fontFamily="@font/pretendard_bold"
                />
            <TextView
                android:id="@+id/TV_time"
                android:layout_width="400px"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="80px"
                android:gravity="left"
                android:textColor="@color/black"
                android:fontFamily="@font/pretendard_bold"
                android:layout_marginLeft="4px"
                android:singleLine="true"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="45px"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="※모든 정보는 서버에 저장됩니다.※"
            android:textStyle="bold"
            android:textColor="#DD1616"
            android:textSize="45px"
            />
    </LinearLayout>
</LinearLayout>